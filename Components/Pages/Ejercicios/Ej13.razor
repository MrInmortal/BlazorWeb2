@page "/Ej13"
@rendermode InteractiveServer

<div class="contenedor">
    <h3>Ejercicio 13</h3>
    <p>Construir una función que reciba como parámetro un entero y un dígito, y retorne cuántas veces se encuentra dicho dígito en el número entero.</p>

    <label for="inputNumber" class="form-label">Número entero:</label>
    <input @bind="Ingresar" type="number" class="form-control" id="inputNumber" placeholder="Ingrese un número" />

    <label for="inputDigit" class="form-label">Dígito:</label>
    <input @bind="IngresarDigito" type="number" class="form-control" id="inputDigit" placeholder="Ingrese un dígito" min="0" max="9"/>

    <button class="btn-calcular" @onclick="Calcular">Calcular cantidad de dígitos</button>

    @if (cantidad != null)
    {
        <div class="alerta-info">
            <strong>Resultado:</strong> El dígito aparece @cantidad veces.
        </div>
    }
</div>

@code {
    private int Ingresar;
    private int IngresarDigito;
    private int? cantidad;

    private void Calcular()
    {
        cantidad = Contar(Ingresar, IngresarDigito);
    }

    private int Contar(int numero, int digito)
    {
        var digitos = numero.ToString().Select(d => int.Parse(d.ToString()));
        return digitos.Count(d => d == digito);
    }
}

