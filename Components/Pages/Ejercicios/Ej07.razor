@page "/Ej07"
@rendermode InteractiveServer

<div class="contenedor">
    <h3>Ejercicio 7</h3>
    <p>Construir una función que reciba un carácter y retorne el código ASCII asociado a él.</p>

    <label for="inputChar" class="form-label">Ingrese un carácter:</label>
    <input @bind="Ingresa" type="text" class="form-control" id="inputChar" maxlength="1" placeholder="Ingrese un carácter" />

    <button class="btn-calcular" @onclick="Calcular">Calcular código ASCII</button>

    @if (codigoASCII != null)
    {
        <div class="alerta-info">
            <strong>Resultado:</strong> El código ASCII del carácter es: @codigoASCII
        </div>
    }
    else if (string.IsNullOrEmpty(Ingresa))
    {
        <div class="alerta-advertencia">
            <strong>Resultado:</strong> Por favor, ingresa un carácter.
        </div>
    }
</div>

@code {
    private string Ingresa = string.Empty;
    private int? codigoASCII;

    private void Calcular()
    {
        if (!string.IsNullOrEmpty(Ingresa))
        {
            codigoASCII = (int)Ingresa[0];
        }
        else
        {
            codigoASCII = null;
        }
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .contenedor {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h3, p {
        text-align: center;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .btn-calcular {
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-size: 18px;
        cursor: pointer;
        width: 100%;
        transition: background 0.3s;
    }

        .btn-calcular:hover {
            background: #0056b3;
        }

    .alerta-info, .alerta-advertencia {
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
