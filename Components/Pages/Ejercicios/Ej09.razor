@page "/Ej09"
@rendermode InteractiveServer

<div class="contenedor">
    <h3>Ejercicio 9</h3>
    <p>Construir una función que reciba un entero y le calcule su factorial.</p>

    <label for="inputNumber" class="form-label">Número entero:</label>
    <input @bind="Ingresar" type="number" class="form-control" id="inputNumber" placeholder="Ingrese un número" />

    <button class="btn-calcular" @onclick="Calcular">Calcular factorial</button>

    @if (factorial != null)
    {
        <div class="alerta-info">
            <strong>Resultado:</strong> El factorial del número es: @factorial
        </div>
    }
    else
    {
        <div class="alerta-advertencia">
            <strong>Resultado:</strong> Por favor, ingresa un número.
        </div>
    }
</div>

@code {
    private int Ingresar;
    private long? factorial;

    private void Calcular()
    {
        if (Ingresar >= 0)
        {
            factorial = Calcular(Ingresar);
        }
    }

    private long Calcular(int numero)
    {
        if (numero == 0) return 1;
        long resultado = 1;
        for (int i = 1; i <= numero; i++)
        {
            resultado *= i;
        }
        return resultado;
    }
}

