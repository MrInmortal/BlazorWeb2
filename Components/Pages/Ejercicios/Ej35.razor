@page "/Ej35"
@rendermode InteractiveServer

<div class="contenedor">
    <h3>Ejercicio 35</h3>
    <p>Construir una función que reciba un número entero y determine si es mayor que 100.</p>

    <label for="inputNumber" class="form-label">Ingrese un número:</label>
    <input @bind="Ingresar" type="number" class="form-control" id="inputNumber" placeholder="Ingrese un número" />

    <button class="btn-calcular" @onclick="Verificar">Verificar si es mayor que 100</button>

    @if (resultado != null)
    {
        <div class="alerta-info">
            <strong>Resultado:</strong> @resultado
        </div>
    }
</div>

@code {
    private int Ingresar;
    private string? resultado;

    private void Verificar()
    {
        resultado = revisar(Ingresar) ? "El número es mayor que 100" : "El número no es mayor que 100";
    }

    private bool revisar(int numero)
    {
        return numero > 100;
    }
}


<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .contenedor {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h3, p {
        text-align: center;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .btn-calcular {
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-size: 18px;
        cursor: pointer;
        width: 100%;
        transition: background 0.3s;
    }

        .btn-calcular:hover {
            background: #0056b3;
        }

    .alerta-info, .alerta-advertencia {
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
        font-size: 16px;
    }

    .alerta-info {
        background: #d1ecf1;
        color: #0c5460;
    }

    .alerta-advertencia {
        background: #fff3cd;
